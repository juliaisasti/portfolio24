---
import GitHub from "./icons/GitHub.astro";
import Tailwind from "./icons/Tailwind.astro";
import JavaScript from "./icons/JavaScript.astro";
import HTML from "./icons/HTML.astro";
import Node from "./icons/Node.astro";
import NPM from "./icons/NPM.astro";
import React from "./icons/React.astro";
import Vite from "./icons/Vite.astro";
import Flowbite from "./icons/Flowbite.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  JAVASCRIPT: {
    name: "JavaScript",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: JavaScript,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: Tailwind,
  },
  HTML: {
    name: "HTML",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: HTML,
  },
  NODE: {
    name: "Node.js",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: Node,
  },
  EXPRESS: {
    name: "Express",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: Node,
  },
  NPM: {
    name: "NPM",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: NPM,
  },
  REACT: {
    name: "React.js",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: React,
  },
  VITE: {
    name: "Vite",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: Vite,
  },
  FLOWBITE: {
    name: "Flowbite",
    class: "dark:bg-black dark:text-white bg-white text-black",
    icon: Flowbite,
  },
};
const PROJECTS = [
  {
    title: "BPMSpotify [under construction]",
    description:
      "Full-stack app created with Spotify's API and its login authentication to work with session tokens. A staple tool for DJs to get a song's BPM, as well as recommending 18 songs in a similar genre with a tempo around the same BPMs, so you can easily build your own playlist to prepare a DJ set. With a finished back-end, I'm currently working on an elegant front-end design that can be easily accesible to anyone.",
    link: "#",
    github: "https://github.com/juliaisasti/spotify-dj",
    image: "/projects/BPMSpotify.webp",
    tags: [TAGS.NODE, TAGS.EXPRESS, TAGS.NPM, TAGS.TAILWIND, TAGS.REACT, TAGS.VITE, TAGS.FLOWBITE],
  },
  {
    title: "A basic portfolio inception",
    description:
      "Built while learning Astro, implementing different technologies to make development as fast as possible. This framework is specially good for quick programming, as this portfolio was built in one day.",
    link: "https://juliaisasti.netlify.app/",
    github: "https://github.com/juliaisasti/portfolio24",
    image: "/projects/portfolio-screenshot.webp",
    tags: [TAGS.JAVASCRIPT, TAGS.TAILWIND, TAGS.HTML, TAGS.NODE, TAGS.NPM],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Project screenshot"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-wrap mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
